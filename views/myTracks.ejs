<%- include("partials/_head") %>

	<body>
		<!-- form to fill -->
		<section class="d-flex align-items-center mt-5">
			<div class="container">
				<div class="header">
					<h1 class="text-muted text-center" style="font-size: 250%;">Crypto Tracker</h1>
				</div>
				<div class="d-flex justify-content-center align-items-center">
					<hr class="w-15 m-0">
					<span class="text-muted font-italic small">~T~</span>
					<hr class="w-15 m-0">
				</div>
				<div class="row d-flex justify-content-center align-items-center">
					<% tracks.forEach(track => { %>
						<div class="col-12 col-md-4 col-lg-3 mb-3">
							<div class="card p-3 p-md-5">
								<div class="row">
									<div class="col-12 text-center">
										<img id="cryptoLogo" class="mb-3" src="<%= track.url %>" style="width:3rem; height:3rem">
									</div>
									<div class="col-12">
										<div class="text-block text-center mb-2">
											<span class="text-dark" id="cryptoTxt"><%= track.crypto %>:</span>
											<span class="font-weight-bold text-dark" id="currentValue">$0000000</span>
										</div>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-12">
										<span class="text-muted small">Crypto:</span>
										<span class="text-dark small"><%= track.crypto %></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-12">
										<span class="text-muted small">Condition:</span>
										<span class="text-dark small"><%= track.condition? "Goes above": "Goes below" %></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-12">
										<span class="text-muted small">Value:</span>
										<span class="text-dark small">$<%= track.value %></span>
									</div>
								</div>
								<div class="row text-center my-2">
									<hr class="w-50">
									<div class="col-12">
										<button type="button" class="btn btn-danger btn-icon-text" onclick="deleteTrack({e: this,trackId: '<%= track._id %>'})">
											<i class="ti-trash btn-icon-prepend"></i>Trash</button>
									</div>
								</div>
							</div>
						</div>
					<% }); %>
				</div>
			</div>
		</section>

		<!-- scripts -->
		<%- include("partials/_scripts") %>
		<script src="js/myTrack.js"></script>

	</body>

	</html>