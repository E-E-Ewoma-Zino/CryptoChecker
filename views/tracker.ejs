<%- include("partials/_head") %> 
<body>
	<!-- form to fill -->
	<section class="d-flex align-items-center w-100 vh-100">
		<div class="container w-md-50">
			<div class="header">
				<h1 class="text-muted text-center">Crypto Tracker</h1>
			</div>
			<div class="d-flex justify-content-center align-items-center">
				<hr class="w-15 m-0">
				<span class="text-muted font-italic small">~T~</span>
				<hr class="w-15 m-0">
			</div>
			<div class="card p-5">
				<div class="text-block text-center mb-3">
					<span class="text-dark">
						BTC value(USD):
						<span class="font-weight-bold text-dark" id="currentValue">$0000000</span>
					</span>
				</div>
				<form action="/track" method="post">
					<div class="form-group">
						<label for="track">Enter value to track(USD):</label>
						<input type="number" class="form-control" id="track" name="track" placeholder="$55000">
					</div>
					<div class="form-group">
						<div class="form-check">
							<label class="form-check-label">
								<input type="radio" class="form-check-input" name="point" id="min" value="0" checked>
								Goes below
								<i class="input-helper"></i></label>
						</div>
						<div class="form-check">
							<label class="form-check-label">
								<input type="radio" class="form-check-input" name="point" id="max" value="1">
								Goes above
								<i class="input-helper"></i></label>
						</div>
					</div>
					<div class="form-group my-2">
						<button class="btn btn-primary float-end">Track</button>
					</div>
				</form>
			</div>
		</div>
	</section>
	
	<!-- scripts -->
	<%- include("partials/_scripts") %>
</body>

</html>